<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:padding="@dimen/dp_20"
    android:layout_marginHorizontal="@dimen/dp_30"
    android:background="@drawable/bg_shape_dialog"
    >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_done_updated"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.familypedia.utils.BoldTextViewGoldPlay
        android:id="@+id/tvTitlePhoneVerified"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_ebony"
        android:text="@string/n_a"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ivDone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <com.familypedia.utils.RegularTextViewGoldPlay
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:text="@string/n_a"
        android:textColor="@color/color_jumbo"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitlePhoneVerified"
        android:layout_marginTop="@dimen/dp_10"
        />
    <com.familypedia.utils.RegularTextViewGoldPlay
        android:id="@+id/tvLinkNotReceived"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:text="@string/n_a"
        android:textColor="@color/color_jumbo"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        android:layout_marginTop="@dimen/dp_10"
        />
    <com.familypedia.utils.RegularTextViewGoldPlay
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:text="@string/n_a"
        android:textColor="@color/color_jumbo"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLinkNotReceived"
        android:layout_marginTop="@dimen/dp_2"
        />
    <com.familypedia.utils.RegularTextViewGoldPlay
        android:id="@+id/tvClickToResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:text="@string/click_here_to_resend"
        android:textColor="@color/color_blue"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTimer"
        android:layout_marginTop="@dimen/dp_2"
        />

    <com.familypedia.utils.RegularTextViewGoldPlay
        android:id="@+id/tvLinkNotReceivedMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:text="@string/not_received_email"
        android:textColor="@color/color_jumbo"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvClickToResend"
        android:layout_marginTop="@dimen/dp_6"
        />

    <com.familypedia.utils.RegularTextViewGoldPlay
        android:id="@+id/tvSupportEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_15"
        android:text="@string/support_email"
        android:textColor="@color/color_blue"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvLinkNotReceivedMsg"
        android:layout_marginTop="@dimen/dp_2"
        />


    <com.familypedia.utils.SemiBoldTextViewGoldPlay
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/color_blue"
        android:text="@string/close"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSupportEmail"
        />

</androidx.constraintlayout.widget.ConstraintLayout>