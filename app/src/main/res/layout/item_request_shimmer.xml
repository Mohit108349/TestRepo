<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemPostRequest"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/dp_5">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_marginVertical="@dimen/dp_4"
        app:cardCornerRadius="@dimen/dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:contentPadding="@dimen/dp_10"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/ivCharacterImage"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                app:cardCornerRadius="@dimen/dp_140"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:cardBackgroundColor="@color/shimmer_placeholder"
                />

            <com.familypedia.utils.SemiBoldTextViewGoldPlay
                android:id="@+id/tvCharacterName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:textColor="@color/color_ebony"
                android:textSize="@dimen/sp_13"
                android:background="@color/shimmer_placeholder"
                app:layout_constraintBottom_toBottomOf="@id/ivCharacterImage"
                app:layout_constraintStart_toEndOf="@id/ivCharacterImage"
                app:layout_constraintTop_toTopOf="@id/ivCharacterImage" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ivCharacterImage2"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                app:cardCornerRadius="@dimen/dp_140"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:cardBackgroundColor="@color/shimmer_placeholder"
                app:layout_constraintTop_toBottomOf="@id/ivCharacterImage"/>

            <com.familypedia.utils.SemiBoldTextViewGoldPlay
                android:id="@+id/tvCharacterName2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/shimmer_placeholder"
                android:textColor="@color/color_ebony"
                android:layout_marginEnd="@dimen/dp_40"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toBottomOf="@id/ivCharacterImage2"
                app:layout_constraintStart_toEndOf="@id/ivCharacterImage2"
                app:layout_constraintTop_toTopOf="@id/ivCharacterImage2"
                app:layout_constraintEnd_toStartOf="@id/btnAccept"/>

            <com.familypedia.utils.SemiBoldTextViewGoldPlay
                android:id="@+id/btnAccept"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_button_semi_rect"
                android:backgroundTint="@color/shimmer_placeholder"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toTopOf="@id/btnAccept2"
                app:layout_constraintEnd_toStartOf="@id/btnReject"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/tvCharacterName2"
                app:layout_constraintTop_toTopOf="@id/ivCharacterImage2"/>

            <com.familypedia.utils.SemiBoldTextViewGoldPlay
                android:id="@+id/btnReject"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_button_semi_rect"
                android:backgroundTint="@color/shimmer_placeholder"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toTopOf="@id/btnReject2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnAccept"
                android:layout_marginStart="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="@id/ivCharacterImage2"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/ivCharacterImage3"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                app:cardCornerRadius="@dimen/dp_140"
                android:layout_marginStart="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_10"
                app:layout_constraintStart_toStartOf="parent"
                app:cardBackgroundColor="@color/shimmer_placeholder"
                app:layout_constraintTop_toBottomOf="@id/ivCharacterImage2"/>

            <com.familypedia.utils.SemiBoldTextViewGoldPlay
                android:id="@+id/tvCharacterName3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:background="@color/shimmer_placeholder"
                android:textColor="@color/color_ebony"
                android:layout_marginEnd="@dimen/dp_40"
                android:textSize="@dimen/sp_13"
                app:layout_constraintBottom_toBottomOf="@id/ivCharacterImage3"
                app:layout_constraintStart_toEndOf="@id/ivCharacterImage3"
                app:layout_constraintTop_toTopOf="@id/ivCharacterImage3"
                app:layout_constraintEnd_toStartOf="@id/btnAccept2"/>

            <com.familypedia.utils.SemiBoldTextViewGoldPlay
                android:id="@+id/btnAccept2"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_button_semi_rect"
                android:backgroundTint="@color/shimmer_placeholder"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnReject2"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@id/tvCharacterName3"
                app:layout_constraintTop_toTopOf="@id/ivCharacterImage3"/>

            <com.familypedia.utils.SemiBoldTextViewGoldPlay
                android:id="@+id/btnReject2"
                android:layout_width="@dimen/dp_70"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_shape_button_semi_rect"
                android:backgroundTint="@color/shimmer_placeholder"
                android:paddingHorizontal="@dimen/dp_15"
                android:paddingVertical="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/btnAccept2"
                android:layout_marginStart="@dimen/dp_10"
                app:layout_constraintTop_toTopOf="@id/ivCharacterImage3"/>

            </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>