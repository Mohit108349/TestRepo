<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/dp_30"
    android:background="@drawable/bg_shape_dialog"
    android:padding="@dimen/dp_30">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_done_updated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.familypedia.utils.BoldTextViewGoldPlay
        android:id="@+id/tvTitleReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center"
        android:text="@string/n_a"
        android:textColor="@color/color_ebony"
        android:textSize="@dimen/sp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivDone" />

    <com.familypedia.utils.RegularTextViewGoldPlay
        android:id="@+id/tvClickHereTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:text="Click here to "
        android:textColor="@color/color_jumbo"
        android:textSize="@dimen/sp_15"
        app:layout_constraintEnd_toStartOf="@id/btnLogin"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitleReset" />

    <com.familypedia.utils.MediumTextViewGoldPlay
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_underline"
        android:layout_marginStart="@dimen/dp_1"
        android:textColor="@color/color_picton_blue"
        android:textSize="@dimen/sp_15"
        app:layout_constraintBottom_toBottomOf="@id/tvClickHereTo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvClickHereTo"
        app:layout_constraintTop_toTopOf="@id/tvClickHereTo"

        />

</androidx.constraintlayout.widget.ConstraintLayout>