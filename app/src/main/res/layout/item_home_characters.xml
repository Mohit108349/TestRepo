<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/itemHomeCharacter"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_5">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivCharacterProfileImage"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:src="@mipmap/ic_profile_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <com.familypedia.utils.MediumTextViewGoldPlay
        android:id="@+id/tvCharacterName"
        android:layout_width="@dimen/dp_60"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:text="@string/n_a"
        android:gravity="center"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_jumbo"
        app:layout_constraintTop_toBottomOf="@id/ivCharacterProfileImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>