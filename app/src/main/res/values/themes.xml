<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FamilyPedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryVariant">@color/color_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/teal_200</item>-->
        <item name="colorSecondary">@color/color_blue_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/color_white</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="SplashTheme" parent="Theme.FamilyPedia">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="TextInputLayoutStyle"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_5</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_5</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_5</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_5</item>

        <item name="hintTextColor">@color/colorTextHint</item>
        <item name="boxStrokeColor">@color/boxStrokeColor</item>
        <item name="fontFamily">@font/goldplay_medium</item>
        <item name="errorEnabled">false</item>
        <item name="placeholderTextColor">@color/colorTextHint</item>
        <item name="expandedHintEnabled">false</item>

        <!--<item name="boxCollapsedPaddingTop">-16dp</item>-->
    </style>

    <style name="TextInputLayoutSpinnerStyle"
        parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_5</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_5</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_5</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_5</item>

        <item name="hintTextColor">@color/colorTextHint</item>
        <item name="boxStrokeColor">@color/boxStrokeColor</item>
        <item name="errorEnabled">false</item>
        <item name="placeholderTextColor">@color/colorTextHint</item>
        <item name="expandedHintEnabled">false</item>

        <item name="endIconDrawable">@drawable/ic_arrow_drop_down</item>
        <item name="android:dropDownSelector">@drawable/ic_arrow_drop_down</item>
    </style>

    <!--Tab Theme-->
    <style name="TabTheme" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/goldplay_semi_bold</item>
    </style>

    <style name="AutoCompleteTextViewStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="fontFamily">@font/goldplay_regular</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:textColor">@color/color_ebony</item>

    </style>

    <style name="TabLayoutStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabInlineLabel">true</item>
        <item name="fontFamily">@font/goldplay_semi_bold</item>
        <item name="tabIndicatorColor">@color/color_blue_light</item>
        <item name="tabTextColor">@color/color_jumbo</item>

        <item name="indicatorColor">@color/color_ebony</item>
        <item name="tabSelectedTextColor">@color/color_ebony</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>


        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementEnterTransition">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition">@android:transition/move</item>

      <!--  <item name="tabBackground">@drawable/tab_unselected</item>-->

    </style>
    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>


<style name="ThemeBottomNavigationBar" parent="Widget.MaterialComponents.BottomNavigationView">
    <item name="fontFamily">@font/goldplay_medium</item>
    <item name="android:textSize">@dimen/sp_12</item>
    <item name="android:textColor">@color/color_jumbo</item>
</style>

    <style name="NewDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Theme.FamilyPedia.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.FamilyPedia.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FamilyPedia.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style parent="Theme.FamilyPedia" name="ef_CustomToolbarTheme">

    <item name="android:textColorPrimary">@color/white</item>

    <item name="actionMenuTextColor">@color/white</item>
</style>

</resources>